@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="">
    <h1 class="display-4 text-center">Simple File Logger Examples</h1>

    <form method="post">
        <div class="d-flex justify-content-center align-content-center mb-4">
            <div class="mx-2">
                <label>Event ID</label>
                <input class="form-control" asp-for="EventId" />
            </div>
            <div class="mx-2">
                <label>Event Name</label>
                <input class="form-control" asp-for="EventName" />
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-success mx-2" asp-page-handler="LogTrace">Trace</button>
            <button class="btn btn-primary mx-2" asp-page-handler="LogDebug">Debug</button>
            <button class="btn btn-info mx-2" asp-page-handler="LogInformation">Information</button>
            <button class="btn btn-warning mx-2" asp-page-handler="LogWarning">Warning</button>
            <button class="btn btn-danger mx-2" asp-page-handler="LogError">Error</button>
            <button class="btn mx-2 text-light" style="background:purple"
                asp-page-handler="LogCritical">Critical</button>
        </div>
    </form>

    <p class="my-3 text-success">
        @Model.LogResult
    </p>
    @if(Model.Error){
    <p class="my-3 text-danger">
        Could not detect writing the log file within 2 seconds.
    </p>
    }


    <h4 class="text-center mt-4">Current Logging Configuration</h4>
    <div>
        <pre>@Model.LogConfigString</pre>
    </div>
</div>
